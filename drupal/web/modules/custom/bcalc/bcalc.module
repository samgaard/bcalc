<?php

/**
 * @file
 * Contains bcalc.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_help().
 */
function bcalc_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bcalc module.
    case 'help.page.bcalc':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Family Budget Calculator') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function bcalc_theme() {
  return [
    'bcalc' => [
      'render element' => 'children',
    ],
    'homepage' => [
      'variables' => ['tabs' => NULL, 'tabscontent' => NULL],
    ],
  ];
}

/**
 * Implements hook_form_alter().
 */
function bcalc_form_alter(&$form, FormStateInterface $form_state) {
  if($form['#form_id'] == 'taxonomy_term_category_form') {
    #$form['relations']['parent']['#multiple'] = false;
    $form['relations']['#open'] = true;
    $form['relations']['weight']['#access'] = false;
  }
}